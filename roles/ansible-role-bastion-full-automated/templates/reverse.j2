$TTL 1D
@       IN SOA  root.{{ base_domain }}. {{ nodes.bastion.hostname }}.{{ base_domain }}. (
                0       ; serial
                1D      ; refresh
                1H      ; retry
                1W      ; expire
                3H )    ; minimum
@       IN      NS      {{ nodes.bastion.hostname }}.{{ base_domain }}.
@       IN      PTR     {{ base_domain }}.

{{ nodes.bastion.ip.split('.')[-1] }}      IN      PTR     {{ nodes.bastion.hostname }}.{{ base_domain }}.
{{ nodes.bastion.ip.split('.')[-1] }}      IN      PTR     {{ nodes.bastion.hostname }}.{{ cluster_name }}.{{ base_domain }}.
{{ nodes.bastion.ip.split('.')[-1] }}      IN      PTR     api.{{ cluster_name }}.{{ base_domain }}.
{{ nodes.bastion.ip.split('.')[-1] }}      IN      PTR     api-int.{{ cluster_name }}.{{ base_domain }}.

{{ nodes.bootstrap.ip.split('.')[-1] }}    IN      PTR     {{ nodes.bootstrap.hostname }}.{{ cluster_name }}.{{ base_domain }}.

{{ nodes.masters[0].ip.split('.')[-1] }}   IN      PTR     {{ nodes.masters[0].hostname }}.{{ cluster_name }}.{{ base_domain }}.
{{ nodes.masters[1].ip.split('.')[-1] }}   IN      PTR     {{ nodes.masters[1].hostname }}.{{ cluster_name }}.{{ base_domain }}.
{{ nodes.masters[2].ip.split('.')[-1] }}   IN      PTR     {{ nodes.masters[2].hostname }}.{{ cluster_name }}.{{ base_domain }}.

{{ nodes.workers[0].ip.split('.')[-1] }}   IN      PTR     {{ nodes.workers[0].hostname }}.{{ cluster_name }}.{{ base_domain }}.
{{ nodes.workers[1].ip.split('.')[-1] }}   IN      PTR     {{ nodes.workers[1].hostname }}.{{ cluster_name }}.{{ base_domain }}.
{{ nodes.workers[2].ip.split('.')[-1] }}   IN      PTR     {{ nodes.workers[2].hostname }}.{{ cluster_name }}.{{ base_domain }}.
